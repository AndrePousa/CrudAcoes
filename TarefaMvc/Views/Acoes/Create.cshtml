@model TarefaMvc.Models.Acoes

@{
    ViewData["Title"] = "Create";
}
<link rel="stylesheet" href="~/css/site.min.css">

<meta charset="utf-8" />

<h2 class="Titulo">Cadastrar</h2>

<h4>Ações</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Acao" class="control-label"></label>
                <input asp-for="Acao" placeholder="Ação" required class="form-control" />
                <span asp-validation-for="Acao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" placeholder="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" Placeholder="R$" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <select asp-for="Tipo">
                    
                    <option></option>
                    <option value="1">Compra</option>
                    <option value="2">Venda</option>
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </select>

               
            </div>
            <div class="form-group">
                <label asp-for="Data_hora" class="control-label"></label>
                <input asp-for="Data_hora" class="form-control" />
                <span asp-validation-for="Data_hora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observacao" class="control-label"></label>
                <input  asp-for="Observacao" class="form-control" />
                <span asp-validation-for="Observacao" placeholder="Observações" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input type="submit" value="Cadastrar" class="btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" ><h4 class="backtolist"> Lista de Cadastros</h4></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
